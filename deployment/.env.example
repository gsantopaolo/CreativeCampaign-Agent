# ————— Logging —————
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ————— MongoDB —————
MONGODB_URL=mongodb://mongodb:27017
MONGODB_DB_NAME=creative_campaign

# ————— NATS JetStream —————
NATS_URL=nats://nats:4222
NATS_RECONNECT_TIME_WAIT=2
NATS_CONNECT_TIMEOUT=10
NATS_MAX_RECONNECT_ATTEMPTS=60

# ————— OpenAI API (REQUIRED) —————
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# OpenAI Text Generation with Structured Outputs
# Used by: context-enricher, creative-generator, brand-composer, text-overlay
# Models: gpt-4o-mini (recommended), gpt-4o, gpt-4-turbo
OPENAI_TEXT_MODEL=gpt-4o-mini

# OpenAI Image Generation (used by image-generator)
# Models: dall-e-3 (recommended), dall-e-2
OPENAI_IMAGE_MODEL=dall-e-3
OPENAI_IMAGE_QUALITY=standard
# Supported sizes: 1024x1024, 1792x1024, 1024x1792
# Note: Aspect ratios configured per campaign (1x1, 4x5, 9x16, 16x9)

# ————— MinIO/S3 Storage —————
S3_ENDPOINT_URL=http://minio:9000
S3_EXTERNAL_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET_NAME=creative-assets

# ————— Brand Composer Configuration —————
LOGO_SIZE_PERCENT=0.15
LOGO_MARGIN_PERCENT=0.03

# ————— API Configuration —————
API_BASE_URL=http://api:8000

# ————— Service Readiness Probes —————
# Enable/disable readiness probe HTTP server on port 8080 (default: true)
API_ENABLE_READINESS_PROBE=true
CONTEXT_ENRICHER_ENABLE_READINESS_PROBE=true
CREATIVE_GENERATOR_ENABLE_READINESS_PROBE=true
IMAGE_GENERATOR_ENABLE_READINESS_PROBE=true
BRAND_COMPOSER_ENABLE_READINESS_PROBE=true
TEXT_OVERLAY_ENABLE_READINESS_PROBE=true

# Timeout in seconds before marking service as unhealthy
CONTEXT_ENRICHER_READINESS_TIME_OUT=500
CREATIVE_GENERATOR_READINESS_TIME_OUT=500
IMAGE_GENERATOR_READINESS_TIME_OUT=500
BRAND_COMPOSER_READINESS_TIME_OUT=500
TEXT_OVERLAY_READINESS_TIME_OUT=500
